@model CBA.Models.Models.ApplicationUser

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="container">
        <br>

        <div class="row">
            <div id="flFormsGrid" class="col-lg-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h3>Delete User</h3>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        Are You sure you want to delete @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)'s account?
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <input type="submit" class="btn btn-danger" value="Delete">
                        }

                        <br>

                        <i data-feather="arrow-left"></i>@Html.ActionLink("Back", "Index")
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

